<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restofondos"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nombreEdicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:text="Esto es la edicion"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagenEdicion"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:src="@drawable/nodisponible" />

    <TextView
        android:id="@+id/fechaEdicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:clickable="true"
        android:text="fecha"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/provinciaEdicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="17dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/localidadEdicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="14dp"
        android:textStyle="bold" />
    <CheckBox
        android:id="@+id/checkboxEdicion"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Voy a asistir"
        android:buttonTint="@color/azul"
        android:textColorLink="#001"
        android:textSize="17dp"/>
    <Button
        android:id="@+id/botonEdicion"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"/>

</LinearLayout>