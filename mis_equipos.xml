<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restofondos">

    <LinearLayout
        android:id="@+id/linearLayoutMisEquipos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#d6d6c2"
            android:gravity="center"
            android:text="Mis Equipos"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaMisEquipos"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantener pulsado para desapuntarse de un equipo en una ediciÃ³n"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:textSize="25dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>