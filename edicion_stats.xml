<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restofondos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEdicionStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SZ "
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkboxStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:buttonTint="@color/azul"
            android:text="He sobrevivido"
            android:textColor="#fff"
            android:textColorLink="#001"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:inputType="number"
                android:textSize="17dp"
                android:text="Numero de pruebas realizadas:"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/editPruebas"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="17dp"
                android:textColor="#fff" />
        </LinearLayout>

        <Button
            android:id="@+id/botonEstadisctica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Guardar estadisticas"
            android:layout_marginBottom="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:inputType="number"
                android:textSize="17dp"
                android:text="Numero de compañeros:"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/txtCompaneros"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="null"
                android:textSize="17dp"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:inputType="number"
                android:textSize="17dp"
                android:text="Numero de compañeros infectados:"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/txtInfectados"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="null"
                android:textSize="17dp"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:inputType="number"
                android:textSize="17dp"
                android:text="Porcentaje de infeccion en el grupo:"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/txtPorcentaje"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="null"
                android:textSize="17dp"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>