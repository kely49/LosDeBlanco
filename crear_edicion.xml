<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/restofondos"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:text="AÃ±adir edicion SZ"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Nombre: "/>
            <EditText
                android:id="@+id/editNombreCrearEdicion"
                android:textSize="20dp"
                android:layout_width="250dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#fff"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Fecha: "/>
            <EditText
                android:id="@+id/editFechaCrearEdicion"
                android:textSize="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:focusable="false"
                android:clickable="true"
                android:textCursorDrawable="@null"
                android:textColor="#fff"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <LinearLayout
            android:layout_marginLeft="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Enlace imagen: "/>
            <EditText
                android:id="@+id/enlaceFotoCrearEdicion"
                android:textSize="20dp"
                android:layout_width="250dp"
                android:inputType="text"
                android:textColor="#fff"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Localidad: "/>
            <EditText
                android:id="@+id/localidadCrearEdicion"
                android:textSize="20dp"
                android:layout_width="250dp"
                android:inputType="text"
                android:textColor="#fff"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Provincia: "/>
            <EditText
                android:id="@+id/provinciaCrearEdicion"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:inputType="text"
                android:ems="10"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/botonCrearEdicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="70dp"
            android:onClick="agregar"
            android:text="Guardar" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>